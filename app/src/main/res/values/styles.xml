<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_toolbar">
        <item name="android:elevation">4dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="list_recycle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="list_fab_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="borderWidth">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_gravity">start|bottom</item>
    </style>

    <style name="list_guideline_hor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_guideline_ver">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_item_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>